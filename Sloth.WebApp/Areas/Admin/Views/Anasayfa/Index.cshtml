@using Sloth.Entities.Concrete
@{
    Sloth.Entities.SlothContext db = new Sloth.Entities.SlothContext();

    ViewBag.Title = "Anasayfa";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}




<br />
<!-- START BREADCRUMB -->
<ul class="breadcrumb">
    <li><a href="#">Anasayfa</a></li>
    <li class="active">Sistem Bilgileri</li>
</ul>
<!-- END BREADCRUMB -->
<!-- START WIDGETS -->
<div class="row">
    <div class="col-md-3">

        @{
            

            var rezervasyon = db.Reservations.Count();
            var iletisim = db.Contacts.Count();
            

        }
        <!-- START WIDGET MESSAGES -->
        <div class="widget widget-default widget-item-icon" onclick="location.href='#';">
            <div class="widget-item-left">
                <span class="fa fa-briefcase"></span>
            </div>
            <div class="widget-data">
                <div class="widget-int num-count">asda</div>
                <div class="widget-title">GELEN BAŞVURULAR</div>
                <div class="widget-subtitle">Gelen İş Başvurularu</div>
            </div>
        </div>
        <!-- END WIDGET SLIDER -->

    </div>
    <div class="col-md-3">

        <!-- START WIDGET MESSAGES -->
        <div class="widget widget-default widget-item-icon" onclick="location.href='#';">
            <div class="widget-item-left">
                <span class="fa fa-envelope"></span>
            </div>
            <div class="widget-data">
                <div class="widget-int num-count">@iletisim</div>
                <div class="widget-title">GELEN MESAJLAR</div>
                <div class="widget-subtitle">Gelen Destek Talepleri</div>
            </div>
        </div>
        <!-- END WIDGET MESSAGES -->

    </div>
    <div class="col-md-3">

        <!-- START WIDGET REGISTRED -->
        <div class="widget widget-default widget-item-icon" onclick="location.href='#';">
            <div class="widget-item-left">
                <span class="fa fa-magic"></span>
            </div>
            <div class="widget-data">
                <div class="widget-int num-count">asasa</div>
                <div class="widget-title">PROJELER</div>
                <div class="widget-subtitle">Yayındaki Projeler</div>
            </div>
        </div>
        <!-- END WIDGET REGISTRED -->

    </div>
    <div class="col-md-3">

        <!-- START WIDGET CLOCK -->
        <div class="widget widget-danger widget-padding-sm">
            <div class="widget-big-int plugin-clock">00:00</div>
            <div class="widget-subtitle">@DateTime.Now.ToString("dddd, MMMM dd yyyy")</div>
        </div>
        <!-- END WIDGET CLOCK -->

    </div>
</div>
<!-- END WIDGETS -->

<div class="row">
    <div class="col-md-12">

        <!-- START PROJECTS BLOCK -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title-box">
                    <h3>EN FAZLA HİZMET VEREN KULLANICILAR</h3>
                    <span>Kategorilere Göre Usta Dağılımları</span>
                </div>
                <ul class="panel-controls" style="margin-top: 2px;">
                    <li><a href="#" class="panel-fullscreen"><span class="fa fa-expand"></span></a></li>
                    <li><a href="#" class="panel-refresh"><span class="fa fa-refresh"></span></a></li>

                </ul>
            </div>
            <div class="panel-body panel-body-table">

                <div class="table-responsive">
                    <table class="table table-condensed table-bordered table-striped">
                        <thead>
                            <tr>
                                <th width="50%">Hizmet Veren Kullanıcı</th>
                                <th width="20%">Kategorisi</th>
                                <th width="30%">Hizmet Yüzdesi</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td><strong>TEst</strong></td>
                                <td><span class="label label-danger">Test</span></td>


                                <td>
                                    <div class="progress progress-small progress-striped active">
                                        <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 10%;">10%</div>
                                    </div>
                                </td>

                        </tbody>
                    </table>
                </div>

            </div>
            <!-- END PROJECTS BLOCK -->

        </div>
    </div>
</div>




