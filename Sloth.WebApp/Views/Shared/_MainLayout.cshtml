@using Sloth.Entities.Concrete

@{
    Sloth.Entities.SlothContext db = new Sloth.Entities.SlothContext();
}

<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <!-- The above 3 meta tags *must* come first in the head -->
    <!-- SITE TITLE -->
    <title>Restaura</title>
    <meta name="description" content="Responsive Restaura HTML5 Template" />
    <meta name="keywords" content="Bootstrap3, restaurant, food, cafe, Template, bakery , Responsive, HTML5" />
    <meta name="author" content="themearth.com" />

    <!-- twitter card starts from here, if you don't need remove this section -->
    <meta name="twitter:card" />
    <meta name="twitter:site" />
    <meta name="twitter:creator" />
    <meta name="twitter:url" content="http://yourdomain.com" />
    <meta name="twitter:title" content="Your home page title, max 140 char" />
    <!-- maximum 140 char -->
    <meta name="twitter:description" content="Your site description, maximum 140 char " />
    <!-- maximum 140 char -->
    <meta name="twitter:image" content="assets/img/twittercardimg/twittercard-280-150.jpg" />
    <!-- when you post this page url in twitter , this image will be shown -->
    <!-- twitter card ends from here -->
    <!-- facebook open graph starts from here, if you don't need then delete open graph related  -->
    <meta property="og:title" content="Your home page title" />
    <meta property="og:url" content="http://your domain here.com" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Your site name here" />
    <!--meta property="fb:admins" content="" /-->  <!-- use this if you have  -->
    <meta property="og:type" content="website" />
    <meta property="og:image" content="assets/img/opengraph/fbphoto.jpg" />
    <!-- when you post this page url in facebook , this image will be shown -->
    <!-- facebook open graph ends from here -->
    <!--  FAVICON AND TOUCH ICONS -->
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.ico" />
    <!-- this icon shows in browser toolbar -->
    <link rel="icon" type="image/x-icon" href="~/assets/img/favicon.ico" />
    <!-- this icon shows in browser toolbar -->
    <link rel="apple-touch-icon" sizes="57x57" href="~/assets/img/favicon/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="~/assets/img/favicon/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/assets/img/favicon/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/assets/img/favicon/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/assets/img/favicon/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/assets/img/favicon/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="~/assets/img/favicon/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/assets/img/favicon/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="~/assets/img/favicon/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="~/assets/img/favicon/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/assets/img/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/assets/img/favicon/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/img/favicon/favicon-16x16.png">
    <link rel="manifest" href="~/assets/img/favicon/manifest.json">

    <!-- BOOTSTRAP CSS -->
    <link rel="stylesheet" href="~/assets/libs/bootstrap/css/bootstrap.min.css" media="all" />

    <!-- FONT AWESOME -->
    <link rel="stylesheet" href="~/assets/libs/fontawesome/css/font-awesome.min.css" media="all" />

    <!-- FONT AWESOME -->
    <link rel="stylesheet" href="~/assets/libs/maginificpopup/magnific-popup.css" media="all" />

    <!-- OWL CAROUSEL CSS -->
    <link rel="stylesheet" href="~/assets/libs/owlcarousel/owl.carousel.min.css" media="all" />
    <link rel="stylesheet" href="~/assets/libs/owlcarousel/owl.theme.default.min.css" media="all" />

    <!-- GOOGLE FONT -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Playfair+Display:400,400i,700,900%7cRaleway:300,400,400i,500,600,700,900" />

    <link rel="stylesheet" href="~/assets/libs/animate/animate.css" media="all" />


    <!-- bootstrap datepicker -->
    <link rel="stylesheet" href="~/assets/libs/datepicker/bootstrap-datetimepicker.min.css" media="all" />

    <!-- MASTER  STYLESHEET  -->
    <link id="lgx-master-style" rel="stylesheet" href="~/assets/css/style-default.css" media="all" />

    <!-- MODERNIZER CSS  -->
    <script src="~/assets/js/vendor/modernizr-2.8.3.min.js"></script>

</head>
<body class="home" style="background-color: #e6e6e6">

    <!--[if lt IE 8]>
    <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade
        your browser</a> to improve your experience.</p>
    <![endif]-->

    <div class="lgx-container ">
        <!-- ***  ADD YOUR SITE CONTENT HERE *** -->
        <!--HEADER-->
        <header>
            <div id="lgx-header" class="lgx-header">
                <div class="header-top">
                    <div class="header-top-inner">
                        <div class="lgx-container">
                            <!--lgx-container-fluid-->
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="contact">
                                        <ul class="list-inline">
                                            <li><span class="question-text">Bize Ulaşın</span> <i class="fa fa-phone" aria-hidden="true"></i> @db.CompanyInfos.Single().CompanyMobile.ToString() </li>
                                            <li><i class="fa fa-envelope" aria-hidden="true"></i> @db.CompanyInfos.Single().CompanyEmail.ToString()</li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="right-menu">
                                        @{


                                            var youtubeurl = db.CompanyInfos.Single().Youtube.ToString();
                                            var instagramurl = db.CompanyInfos.Single().Instagram.ToString();
                                            var facebookurl = db.CompanyInfos.Single().Facebook.ToString();
                                            var twitterurl = db.CompanyInfos.Single().Twitter.ToString();
                                            var googleurl = "https://google.com";


                                            <ul class="list-inline">
                                                <li><a href="@twitterurl" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                                <li><a href="@facebookurl" target="_blank"><i class="fa fa-facebook-f" aria-hidden="true"></i></a></li>
                                                <li><a href="@googleurl" target="_blank"><i class="fa fa-google" aria-hidden="true"></i></a></li>
                                                <li><a href="@youtubeurl" target="_blank"><i class="fa fa-youtube-play" aria-hidden="true"></i></a></li>
                                                <li><a href="@instagramurl" target="_blank"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>

                                            </ul>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="lgx-header-position" >
                    <!--lgx-header-position-fixed lgx-header-position-white lgx-header-fixed-container lgx-header-fixed-container-gap lgx-header-position-white-->
                    <div class="lgx-container">
                        <!--lgx-container-fluid-->



                        <nav class="navbar navbar-default lgx-navbar">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <div class="lgx-logo lgx-logo-fixed lgx-logo-white">
                                    <!--lgx-logo-default lgx-logo-fixed lgx-logo-white lgx-logo-black-->
                                    <a href="~/Home" class="lgx-scroll">
                                        <img src="~/Uploads/sloth-logo.png" alt="Restaura Logo" />
                                    </a>
                                </div>
                            </div>
                            <div id="navbar" class="navbar-collapse collapse lgx-collapse">
                                <ul class="nav navbar-nav lgx-nav">
                                    <li><a href="~/Home">ANA SAYFA</a></li>
                                    <li><a href="~/About">HAKKIMIZDA</a></li>
                                    <li><a href="~/Menu">MENÜ</a></li>
                                    <li>
                                        <a href="~/Category/Details" class="dropdown-toggle active" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">ÜRÜNLERİMİZ <span class="caret"></span></a>
                                        <ul class="dropdown-menu multi-level">
                                            @foreach (var item in db.Categories)
                                            {
                                                <li><a href="~/Category/Details/@item.Id">@item.Title.ToString()</a></li>
                                            }


                                        </ul>
                                    </li>
                                    <li><a href="~/Contact">İLETİŞİM</a></li>
                                    <li><a href="~/Reservation"><span>REZERVASYON</span></a></li>

                                </ul>


                              
                            </div><!--/.nav-collapse -->
                        </nav>
                    </div>
                    <!-- //.CONTAINER -->
                </div>
            </div>
        </header>
        <!--HEADER END--> 
        
        @RenderBody()
        <!--FOOTER-->
        <footer>
            <div id="lgx-footer" class="lgx-footer" style="background-image: url('/Uploads/footer-bg.jpg')">
                <!--lgx-footer-white-->
                <div class="lgx-inner">
                    <div class="container">
                        <div class="lgx-footer-area">
                            <div class="lgx-footer-single">
                                <a class="logo" href="~/Home"><img src="~/assets/img/logo-footer.png" alt="Logo"></a>
                                <address>
                                    <i class="fa fa-map-marker"></i>
                                    @db.CompanyInfos.Single().Location.ToString()
                                </address>
                                <ul class="list-unstyled lgx-address-info">
                                    <li><i class="fa fa-phone"></i>@db.CompanyInfos.Single().CompanyMobile.ToString()</li>
                                    <li><i class="fa fa-envelope"></i>@db.CompanyInfos.Single().CompanyEmail.ToString()</li>
                                </ul>
                            </div> <!--//footer-area-->
                            <div class="lgx-footer-single">
                                <h2 class="title">Açılış Saati</h2>
                                <div class="opening-time-single">
                                    Cumartesi- Pazar
                                    <span><i>10:00</i>  - <i>23:00</i> </span>
                                </div>
                                <div class="opening-time-single">
                                    Cumartesi- Pazar
                                    <span><i>10:00</i>  - <i>23:00</i> </span>
                                </div>
                                <div class="opening-time-single">
                                    Cumartesi- Pazar
                                    <span><i>10:00</i>  - <i>23:00</i> </span>
                                </div>
                            </div> <!--//footer-area-->
                            <div class="lgx-footer-single">
                                <h2 class="title">Menü İçeriklerimiz</h2>
                                <ul class="list-unstyled">
                                    @foreach (var item in db.Categories)
                                    {
                                        <li><a href="~/Menu">@item.Title</a></li>
                                    }


                                </ul>
                            </div> <!--//footer-area-->
                           
                        </div>
                        <div class="lgx-footer-bottom">
                            <div class="lgx-copyright">
                                <p>© 2017 @db.CompanyInfos.Single().CompanyName is powered by <a href="http://www.github.com/muhammeddurus" target="_blank">Muhammed Duruş.</a> The property of their owners.</p>
                            </div>
                            <div class="lgx-social-footer">
                               
                                    <ul class="social">
                                        <li><a href="@facebookurl" target="_blank"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                        <li><a href="@twitterurl" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                        <li><a href="@instagramurl" target="_blank"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>                           
                                    </ul>
                                    
                                </div>
                        </div>

                    </div>
                    <!-- //.CONTAINER -->
                </div>
                <!-- //.footer Middle -->
            </div>
        </footer>
        <!--FOOTER END-->


    </div>
    <!--//.LGX SITE CONTAINER-->
    <!-- *** ADD YOUR SITE SCRIPT HERE *** -->
    <!-- JQUERY  -->
    <script src="~/assets/js/vendor/jquery-1.12.4.min.js"></script>

    <!-- BOOTSTRAP JS  -->
    <script src="~/assets/libs/bootstrap/js/bootstrap.min.js"></script>


    <script src="~/assets/libs/jquery.smooth-scroll.js"></script>

    <!-- SKILLS SCRIPT  -->
    <script src="~/assets/libs/jquery.validate.js"></script>

    <!-- adding magnific popup js library -->
    <script type="text/javascript" src="~/assets/libs/maginificpopup/jquery.magnific-popup.min.js"></script>

    <!-- Owl Carousel  -->
    <script src="~/assets/libs/owlcarousel/owl.carousel.min.js"></script>


    <!-- bootstrap date picker js with moment js -->
    <script src="~/assets/libs/datepicker/moment-with-locales.min.js"></script>
    <script src="~/assets/libs/datepicker/bootstrap-datetimepicker.min.js"></script>

    <!-- Counter JS -->
    <script src="~/assets/libs/waypoints.min.js"></script>
    <script src="~/assets/libs/counterup/jquery.counterup.min.js"></script>

    <!-- MENU FILTER   -->
    <script src="~/assets/libs/isotope/isotope.pkgd.min.js"></script>

    <!-- SMOTH SCROLL -->
    <script src="~/assets/libs/jquery.smooth-scroll.min.js"></script>
    <script src="~/assets/libs/jquery.easing.min.js"></script>

    <!-- type js -->
    <script src="~/assets/libs/typed/typed.min.js"></script>

    <!-- Sticky Sidebar js -->
    <script src="~/assets/libs/stickysidebar/theia-sticky-sidebar.min.js"></script>


    <!-- CUSTOM SCRIPT  -->
    <script src="~/assets/js/custom.script.js"></script>


</body>
</html>
